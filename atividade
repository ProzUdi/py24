#atividade 16 
base = int(input("Entre com a base = "))
altura = int(input("Entre com a altura = "))
area = 0.5 * base * altura 
print("A area do triangulo é:" ,area)

#atividade 17
num1 = float(input("Entre com um numero = "))
num2 = float(input("Entre com um numero = "))
maior_numero = max(num1,num2)
menor_numero = min(num1,num2)
diferença = maior_numero - menor_numero
print(diferença)



