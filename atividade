#atividade 12
import math
num = int(input("Entre com um numero = "))
raiz_quadrda = math.sqrt(num)
print("A Raiz quadrda do numero é:" ,raiz_quadrda)

#atividade 13
x = int(input("Entre com um numero = "))
y = int(input("Entre com um numero = "))
z = int(input("Entre com um numero = "))
maior_numero = max(x, y, z)
print(maior_numero)

#atividade 14
